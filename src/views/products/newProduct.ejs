<!DOCTYPE html>
<html>
<head>
	<%- include('../partials/adminHead.ejs')%>
    <title>Crear Producto - Terra Rossa</title>
</head>
<body>
    <!-- seccion barra de navegacion -->
    <header>
      <%- include('../partials/navAdmin')%>
    </header>
    <!-- fin seccion barra de navegacion -->

    <!-- seccion productos -->
    <main>
      <div class="admin__main">
             <%- include('../partials/sidebar')  %> 
            <section class="data__container">
                <h4>Panel de administración</h4>
                <%- include('../partials/adminContent')  %> 
    
                <div class="filter__container">
                    <h3 class="new__product__tittle">Nuevo producto</h3>
                    
                </div>
                <form class="form__scroll" method="POST" action="/product/new-product" enctype="multipart/form-data">
                    <div class="new__prod__container">
                        <div class="new__prod__subgroup">
                            <div class="new__prod__ind">
                                <label for="fnombre">Nombre del producto</label>
                                <input class="" type="text" id="name" name="fnombre" placeholder="" value="<%= (locals.old && old.fnombre ? old.fnombre : '') %>">
                                <!-- <div class="inv"></div> -->
                                 <!--para que queden los datos ingresados anteriormente-->
                                <% if(locals.errors && errors.fnombre) { %> 
                                    <p class="product-warning"> <%= errors.fnombre.msg %> </p>
                                  <%}%> 
                            </div>
                            <div class="new__prod__ind">
                                <label for="fcategory">Categoría</label>
                                <select name="fcategoria" id="fcategoria">
                                  <option class="" selected disabled>Seleccione una categoría</option>
                                  <% categories.forEach(category => { %>
                                    <option 
                                    value="<%=category.idProductCategory%>"
                                    <%= locals.old && (category.idProductCategory === old.fcategoria) ? 'selected' : null %>
                                    ><%=category.productCategoryName%></option>
                                  <% }) %>
                                </select>
                                <!-- <div class="inv" id="fcat"></div> -->
                                <% if(locals.errors && errors.fcategoria) { %> 
                                  <p class="product-warning"> <%= errors.fcategoria.msg %> </p>
                                <%}%> 
                            </div>
                        </div>
                        <div class="new__prod__subgroup">
                            <div class="new__prod__ind">
                                <label for="fharYear">Año de cosecha</label>
                                <input class="" type="number" id="fcoseAnio" name="fcoseAnio" placeholder="" value="<%= (locals.old && old.fcoseAnio ? old.fcoseAnio : '') %>"> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fcoseAnio) { %> 
                                    <p class="product-warning"> <%= errors.fcoseAnio.msg %> </p>
                                  <%}%>
                            </div>
                            <div class="new__prod__ind">
                                <label for="fvariety">Variedad</label>
                                <input class="" type="text" id="fvariety" name="fvariedad" placeholder="" value="<%= (locals.old && old.fvariedad ? old.fvariedad : '') %>"> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fvariedad) { %> 
                                    <p class="product-warning"> <%= errors.fvariedad.msg %> </p>
                                  <%}%> 
                            </div>
                            <div class="new__prod__ind">
                                <label for="fcrianza">Crianza</label>
                                <input class="" type="text" id="fcrianza" name="fcrianza" placeholder="" value="<%= (locals.old && old.fcrianza ? old.fcrianza : '') %>"> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fcrianza) { %> 
                                    <p class="product-warning"> <%= errors.fcrianza.msg %> </p>
                                  <%}%> 
                            </div>
                            <div class="new__prod__ind">
                                <label for="fguarda">Potencial de guarda</label>
                                <input class="" type="text" id="fguarda" name="fguarda" placeholder="" value="<%= (locals.old && old.fguarda ? old.fguarda : '') %>"> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fguarda) { %> 
                                    <p class="product-warning"> <%= errors.fguarda.msg %> </p>
                                  <%}%> 
                            </div>
                        </div>
                        <div class="new__prod__subgroup">
                            <div class="new__prod__ind">
                                <label for="fnotacata">Nota de cata</label>
                                <textarea class="" id="fnotacata" name="fnotacata"  rows="4" value ="<%= (locals.old && old.fnotacata? old.fnotacata: '') %>"></textarea> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fnotacata) { %> 
                                  <p class="product-warning"> <%= errors.fnotacata.msg %> </p>
                                <%}%>
                            </div>
                        </div>
    
                        <div class="new__prod__subgroup">
                            <div class="new__prod__ind">
                                <label for="fprodfoto">Imagen del producto</label>
                                <input class="" type="file" id="fimg" name="fprodfoto">
                                <!-- <div class="inv"></div> -->

                                 <% if(locals.errors && errors.fprodfoto) { %> 
                                  <p class="product-warning"> <%= errors.fprodfoto.msg %> </p>
                                <%}%> 
                            </div>
                            <div class="new__prod__ind">
                                <label for="fprecio">Precio</label>
                                <input class="" type="number" id="fprecio" name="fprecio" placeholder="" value="<%= (locals.old && old.fprecio ? old.fprecio : '') %>"> 
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fprecio) { %> 
                                    <p class="product-warning"> <%= errors.fprecio.msg %> </p>
                                  <%}%> 
                            </div>
                            <div class="new__prod__ind">
                                <label for="fstock">Stock</label>
                                <input class="" type="number" id="fstock" name="fstock" placeholder="" value="<%= (locals.old && old.fstock ? old.fstock: '') %>">
                                <!-- <div class="inv"></div> -->
                                <% if(locals.errors && errors.fstock) { %> 
                                  <p class="product-warning"> <%= errors.fstock.msg %> </p>
                                <%}%> 
                            </div>
                        </div>
                        <div>
                            <div class="new__prod__ind" id="newbuttons">
                                <a id="cancel" type="button" href="/users/admin">Cancelar</a>
                                <input id="create" type="submit" value="Crear producto">
                            </div>
                        </div>
                    </div>


                </form>
            </section>
      </div>
      
    </main>
    <!-- fin seccion productos -->

    <footer>
      <%- include('../partials/adminfooter')  %> 
    </footer>

    <script>
      const navMenu = document.querySelector("#navMenu");
      const navToggle = document.querySelector(".nav-menu-list");

      navMenu.addEventListener("click", () => {
        navMenu.classList.toggle("active");
      });
      navMenu.addEventListener("click", () => {
        navToggle.classList.toggle("nav-menu_visible");
      });
    </script>

    <!-- Dashboard -->
    <script>
      const sideMenu = document.querySelectorAll(".side__link");
      const sideToggle = document.querySelectorAll(".side__child");
      const sideIcon = document.querySelectorAll(".fa-angle-down");+

      sideMenu.forEach(element => {
        element.addEventListener("click", (event) => {

          sideMenu.forEach((el) => {
            el.classList.remove("side__menu__focus");
          });

          const sideMenuElement = event.target;
          sideMenuElement.classList.toggle("side__menu__focus");

          if(sideMenuElement.lastChild){
            sideMenuElement.lastChild.classList.toggle("rotate");
          }
          if(sideMenuElement.nextElementSibling){
            sideMenuElement.nextElementSibling.classList.toggle("side-menu_drop");
          }

        });
      })
      // sideIcon.forEach(element => {
      //   element.addEventListener("click", (event) => {
      //     sideIcon.forEach((el) => {
      //       el.classList.remove("rotate");
      //     });
      //     const sideIconElement = event.target;
      //     sideIconElement.classList.toggle("rotate");
      //   });
      // });
    </script>

   <script src="/js/productCreateValidation.js"></script>
   <script src="/js/navAdmin.js"></script>

</body>
</html>